{
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "installCommand": "npm install && npm run install:dashboard",
  "framework": null,
  "rewrites": [
    {
      "source": "/dashboard",
      "destination": "/dashboard/index.html"
    },
    {
      "source": "/dashboard/(.*)", // Match /dashboard/ followed by anything
      "destination": "/dashboard/index.html" // Always serve the React app's entry point
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate"
        }
      ]
    }
  ]
}