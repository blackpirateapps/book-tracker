{
  "name": "book-tracker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "build": "npm run build:dashboard && npm run copy:dashboard",
    "build:dashboard": "cd dashboard-react && npm run build",
    "copy:dashboard": "mkdir -p public/dashboard && cp -r dashboard-react/dist/* public/dashboard/",
    "install:dashboard": "cd dashboard-react && npm install"
  },
  "dependencies": {
    "@libsql/client": "latest",
    "@vercel/blob": "latest",
    "sharp": "latest"
  },
  "devDependencies": {
    "vercel": "latest"
  }
}